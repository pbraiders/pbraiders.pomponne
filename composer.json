{
    "name": "pbraiders/pomponne",
    "description": "A paintball reservation management system",
    "keywords": [
        "paintball",
        "reservation",
        "management"
    ],
    "homepage": "https://github.com/pbraiders/pomponne",
    "readme": "README.md",
    "time": "2019-09-10",
    "license": "GPL-3.0-or-later",
    "authors": [
        {
            "name": "Olivier Jullien",
            "homepage": "https://github.com/ojullien",
            "email": "contact@pbraiders.fr"
        }
    ],
    "require": {
        "php": "^7.3",
        "ext-intl": "*",
        "ext-json": "*",
        "filp/whoops": "^2.5",
        "league/plates": "^4.0.0-alpha",
        "league/uri-parser": "^1.4",
        "monolog/monolog": "^2.0",
        "php-di/php-di": "^6.0",
        "slim/psr7": "^0.5.0",
        "slim/slim": "^4.2"
    },
    "autoload": {
        "psr-4": {
            "Pbraiders\\": "pbr/module/"
        },
        "files": [
            "pbr/module/Service/Utils/Stdlib/Stdlib.php"
        ]
    },
    "require-dev": {
        "phpmd/phpmd": "@stable",
        "phpunit/phpunit": "^8",
        "squizlabs/php_codesniffer": "*",
        "vimeo/psalm": "^3.4"
    },
    "autoload-dev": {
        "psr-4": {
            "PbraidersTest\\": "tests/module/"
        },
        "files": [
            "pbr/module/Service/Utils/Stdlib/Stdlib.php"
        ]
    },
    "config": {
        "sort-packages": true,
        "optimize-autoloader": true,
        "vendor-dir": "vendor/"
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@test"
        ],
        "cs-check": "vendor/bin/phpcs --standard=./phpcs.xml",
        "cs-fix": "vendor/bin/phpcbf --standard=./phpcs.xml",
        "test": "vendor/bin/phpunit --colors=always",
        "md-check": "vendor/bin/phpmd src text ./phpmd.xml --exclude '*/vendor/*,*/old/*'"
    }
}
