{
    "name": "pbraiders/pomponne",
    "description": "Paintball reservation management system",
    "version": "2.0.0",
    "keywords": [
        "paintball",
        "reservation",
        "management"
    ],
    "homepage": "https://github.com/pbraiders/pomponne",
    "readme": "README.md",
    "time": "2019-08-10",
    "license": "GPL-3.0",
    "authors": [
        {
            "name": "Olivier Jullien",
            "homepage": "https://github.com/ojullien",
            "email": "contact@pbraiders.fr",
            "role": "Developer"
        }
    ],
    "require": {
        "php": "^7.3",
        "zendframework/zend-config": "^3.3"
    },
    "autoload": {
        "psr-4": {
            "Pbraiders\\Pomponne\\": "src/"
        }
    },
    "require-dev": {
        "ext-xdebug": "*",
        "squizlabs/php_codesniffer": "*",
        "phpunit/phpunit": "^8"
    },
    "autoload-dev": {
        "psr-4": {
            "Pbraiders\\Pomponne\\Tests\\": "tests/src/"
        }
    },
    "config": {
        "sort-packages": true,
        "vendor-dir": "src/vendor/"
    },
    "scripts": {
        "check": [
            "@cs-check",
            "@test"
        ],
        "cs-check": "vendor/bin/phpcs --standard=./phpcs.xml",
        "test": "vendor/bin/phpunit --colors=always",
        "md-check": "vendor/bin/phpmd src text ./phpmd.xml"
    }
}
